{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
    "height": 400,
    "title":
    {
        "text": "Energy Usage by Fuel Type Across Australia (2023)",
        "fontSize": 15 },
    "data": {
      "url": "https://raw.githubusercontent.com/jascikasabesh/datavis2/main/ne_10m_admin_1_states_provinces.json",
      "format": {
        "type": "topojson",
        "feature": "ne_10m_admin_1_states_provinces"
      }
    },
    "projection": {
      "type": "mercator"
    },
    "transform": [
      {
        "lookup": "properties.name",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/jascikasabesh/datavis2/main/energy_data_by_state.csv",
            "format": {"type": "csv"}
          },
          "key": "State",
          "fields": ["Coal", "Oil", "Gas", "Renewables"]
        }
      },
      {
        "calculate": "datum[energy_type]",  
        "as": "selected_energy"
      }
    ],
    "params": [
      {
        "name": "energy_type",
        "value": "Renewables",  
        "bind": {
          "input": "select",
          "options": ["Coal", "Oil", "Gas", "Renewables"],
          "name": "Select Fuel Type: "
        }
      }
    ],
    "mark": {
      "type": "geoshape",
      "stroke": "black",
      "strokeWidth": 0.4
    },
    "encoding": {
      "color": {
        "field": "selected_energy",  
        "type": "quantitative",
        "scale": {
          "scheme": "yellowgreen"
        },
        "title": "Energy Usage (%)"
      },
      "tooltip": [
        {"field": "properties.name", "type": "nominal", "title": "State"},
        {"field": "Coal", "type": "quantitative", "title": "Coal (%)"},
        {"field": "Oil", "type": "quantitative", "title": "Oil (%)"},
        {"field": "Gas", "type": "quantitative", "title": "Gas (%)"},
        {"field": "Renewables", "type": "quantitative", "title": "Renewables (%)"}
      ]
    }
  }
  
