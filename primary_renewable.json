{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Primary Consumption of Renewable Energy by Country %",
    "projection": {"type": "equalEarth"},
    
    "params": [
      {
        "name": "selectedYear",  
        "value": 2023,  
        "bind": {
          "input": "range",
          "min": 1970,
          "max": 2023,
          "step": 1,
          "name": "Year: "  
        }
      }
    ],
    
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/jascikasabesh/datavis2/refs/heads/main/ne_110m_admin_0_countries%20(1).json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/jascikasabesh/datavis2/refs/heads/main/renewable-share-energy.csv"
        },
        "transform": [
          {"filter": "datum.Year == selectedYear"},  
          
          {
            "lookup": "Entity",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/jascikasabesh/datavis2/refs/heads/main/ne_110m_admin_0_countries%20(1).json",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
              },
              "key": "properties.NAME"
            },
            "as": "geo"
          }
        ],
        "mark": {
          "type": "geoshape",
          "stroke": "lightgray",
          "strokeWidth": 0.5
        },
        "encoding": {
          "shape": {
            "field": "geo",
            "type": "geojson"
          },
          "color": {
            "field": "Renewables (% equivalent primary energy)",
            "type": "quantitative",
            "scale": {
               "scheme":"greens"
            },
            "legend": {"title": "Renewable Energy %"}
          },
          "tooltip": [
            {"field": "Entity", "type": "nominal", "title": "Country"},
            {"field": "Renewables (% equivalent primary energy)", "type": "quantitative", "title": "Renewable %", "format": ".1f"}
          ]
        }
      }
    ]
  }
  